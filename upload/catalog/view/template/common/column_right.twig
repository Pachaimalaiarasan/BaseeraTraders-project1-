{% if modules %}
<aside id="column-right" class="custom-column-right">
  {% for module in modules %}
    {{ module }}
  {% endfor %}
</aside>
{% endif %}


<style>
  /* Custom responsive styles for the right column */
.custom-column-right {
  width: 100%;
  padding: 10px;
}

/* On tablets and larger screens, make it a sidebar */
@media (min-width: 768px) {
  .custom-column-right {
    width: 25%;
    float: right;
  }
}

</style>